<p id="notice"><%= notice %></p>

<h1>Listing Car Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @car_statuses.each do |car_status| %>
      <tr>
        <td><%= car_status.description %></td>
        <td><%= car_status.status %></td>
        <td><%= link_to 'Show', car_status %></td>
        <td><%= link_to 'Edit', edit_car_status_path(car_status) %></td>
        <td><%= link_to 'Destroy', car_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

