<div class="panel panel-primary">
  <div class="panel-heading panel-primary">
    <td><h4>Car Statuss</h4></td>
  </div>
  <table class="table table-bordered text-center">
    <thead>
      <tr>
        <th class="text-center">Description</th>
        <th class="text-center">Status</th>
      </tr>
    </thead>

    <tbody>
        <% if @car_status.status == true %>
          <tr class="success">
            <td><%= @car_status.description %></td>
            <td><button type="button" class="btn btn-success btn-sm active" disabled="disabled"><i class="fa fa-check"></i></button></td>

        <%else%>
          <tr class="danger">
            <td><%= @car_status.description %></td>
            <td><button type="button" class="btn btn-danger btn-sm active" disabled="disabled"><i class="fa fa-times"></i></button></td>

        <%end%>




      </tr>
    </tbody>
  </table>
</div>





  <div class="panel panel-primary">
    <div class="panel-heading panel-primary">
      <td><h4>Car Image</h4></td>
    </div>
  <%if @car_images.blank? %>
    <div class="container">
      <h3>No Image Yet, Please Contact Us</h3>
    </div>

  <%else%>
    <% i = 1 %>
      <table class="table table-bordered text-center">
        <thead>
          <th class="text-center">Lists</th>
          <th class="text-center">Details</th>
          <th class="text-center">Images</th>
        </thead>
        <tbody>
          <% @car_images.each do |car_image| %>
            <tr>
              <td><%= i %></td>
              <td><%= car_image.image_name %></td>
              <td><%= image_tag car_image.image.url(:thumb) %></td>


            </tr>

            <% i = i+1 %>
        </tbody>


  <%end %>
  <%end %>
    </table>

</div>




<%= link_to 'Back', user_car_path(@user,@car), class: "btn btn-primary"  %>
