<div class="panel panel-primary">
  <div class="panel-heading panel-primary">
    <h1>Listing Cars</h1>
  </div>

<table class="table table-bordered text-center">
  <thead>
    <tr>
      <th class="text-center">Car license</th>
      <th class="text-center">Description</th>
      <th class="text-center">Enter date</th>
      <th class="text-center">Car category</th>
      <th class="text-center">Car subcategory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.car_license %></td>
        <td><%= car.description %></td>
        <td><%= car.enter_date %></td>
        <td><%= car.car_category %></td>
        <td><%= car.car_subcategory %></td>
        <td><%= link_to 'Add Status', new_user_car_car_status(@user,car),class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_car_path(car),class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


<%= link_to 'New Car', new_car_path,class: "btn btn-primary" %>
